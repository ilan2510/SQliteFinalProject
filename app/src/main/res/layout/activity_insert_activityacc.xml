<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.ailan.sqlitefinalproject.InsertActivity">

    <TextView
        android:id="@+id/inserttvaccId"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Insert new Account"
        android:layout_gravity="center"
        android:textSize="15sp"
        android:layout_marginTop="90dp"
        />
    <EditText
        android:id="@+id/insertaccfname"
        android:layout_marginTop="20dp"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="10"
        android:hint="The First name"/>


    <EditText
        android:id="@+id/insertacclname"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="10"
        android:hint="The last name"
        />

    <EditText
        android:id="@+id/insertaccdisplayname"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="10"
        android:hint="your Display name"

        />

    <EditText
        android:id="@+id/insertaccemail"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="10"
        android:hint="your Email "
        />
    <EditText
        android:id="@+id/insertaccspecid"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:ems="10"
        android:hint="Your special account Id"
        />

    <Button
        android:id="@+id/insertaccBtnSave"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:text="Save And Insert"
        />


</LinearLayout>

